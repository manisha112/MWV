@model MWV.Models.Product
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Delete";
}

<h2><b> Delete Product ->@Html.ActionLink("Goto Home", "Index")</b></h2>
<br /><br />
  &nbsp;<span id="ErrorMsgs"></span>
<br />
&nbsp;<h3 class="form-label">&nbsp; Are you sure you want to delete this Product?</h3>
<div>
    </br>
    <div class="form-group">
        <p class="form-label">&nbsp;Product Code</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.product_code, new { @class = "text-input", id = "product_code", @readonly = "readonly", disabled = "disabled" })
        </div>
    </div>
    </br>
 
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="btnDeleteProduct" />
        </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" title="Cancel" value="Cancel" id="btnCancel" onclick="location.href='@Url.Action("Index", "ProductPriceAdmin")'" />
        </div>
    </div><br /><br />
