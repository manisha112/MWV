    $('#quickView').on('click', 'a[href="#seeOrderDetails"]', function () {
        var id = $(this).attr('data-order-id');
        //alert(id);
        $.ajax({
            url: "/quickView/seeOrderDetails/" + id,
            contentType: "application/html; charset=utf-8",
            type: "GET",
            dataType: 'html',
            context: document.body,
        })
