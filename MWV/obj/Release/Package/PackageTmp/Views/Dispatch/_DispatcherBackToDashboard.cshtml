@{
    ViewBag.Title = "MWV Dev: Dispatch";
}
<script src="~/Scripts/dispatch.js"></script>
@*<h2>DashBoard</h2>*@

<div class="vehicle_schedule">
    <div class="tab-link tab-a">
        <p class="schedule_title"><strong>Today's Vehicle Schedule</strong></p>
        @{
            DateTime TodayDate = DateTime.Now;
        }
        <a href="#seeScheduleDetails" data-id="@TodayDate.ToShortDateString()" class="see_details_link" id="Today">See Details</a>
    </div>

    <div id="vehicleDetails-Today" class="vehicle_schedule_details hidden">
        <div id="vehicleDetailsMst-Today">

        </div>
        <div id="vehicleDetailsChild-Today">

        </div>
    </div> <!-- .vehicle_schedule_details -->

    <div id="dispatchDetails-Today" class="dispatch_details hidden">

    </div> <!-- .dispatch_details -->
</div> <!-- .vehicle_schedule -->

<div class="vehicle_schedule">
    <div class="tab-link tab-b">
        <p class="schedule_title">
            <strong>
                @{
                    DateTime TomorrowDate = DateTime.Now.AddDays(1);
                }
                @TomorrowDate.ToString("dd MMM yyyy")
            </strong>
        </p>

        <a href="#seeScheduleDetails" data-id="@TomorrowDate.ToShortDateString()" class="see_details_link" id="Tomorrow">See Details</a>
    </div>

    <div id="vehicleDetails-Tomorrow" class="vehicle_schedule_details hidden">
        <div id="vehicleDetailsMst-Tomorrow">

        </div>
        <div id="vehicleDetailsChild-Tomorrow">

        </div>
        <!-- .vehicle_results -->
    </div> <!-- .vehicle_schedule_details -->

    <div id="dispatchDetails-Tomorrow" class="dispatch_details hidden">

    </div>
</div> <!-- .vehicle_schedule -->

<div class="vehicle_schedule">
    <div class="tab-link tab-a">
        <p class="schedule_title">
            <strong>
                @{
                    DateTime NextDay = DateTime.Now.AddDays(2);
                }
                @NextDay.ToString("dd MMM yyyy")
            </strong>
        </p>

        <a href="#seeScheduleDetails" data-id="@NextDay.ToShortDateString()" class="see_details_link" id="NextDay">See Details</a>
    </div>

    <div id="vehicleDetails-NextDay" class="vehicle_schedule_details hidden">
        @* partial view : vehicledispatch details *@
        <div id="vehicleDetailsMst-NextDay">

        </div>
        <div id="vehicleDetailsChild-NextDay">

        </div>
        <!-- .vehicle_results -->
    </div> <!-- .vehicle_schedule_details -->

    <div id="dispatchDetails-NextDay" class="dispatch_details hidden">

    </div>
</div> <!-- .vehicle_schedule -->

