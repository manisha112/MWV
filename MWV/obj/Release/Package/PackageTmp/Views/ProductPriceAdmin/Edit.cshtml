        int stDtMon = Convert.ToDateTime(Model.start_date).Month;
        int stDtYear = Convert.ToDateTime(Model.start_date).Year;

        int EndDtDay = Convert.ToDateTime(Model.end_date).Day;
        int EndDtMon = Convert.ToDateTime(Model.end_date).Month;
        int EndDtYear = Convert.ToDateTime(Model.end_date).Year;

        decimal UnitPrice = Math.Round(Model.unit_price, 2);

    }

    <input type="hidden" value="@Model.product_price_id" id="hdnProductPriceIDToEdit" />
    <input type="hidden" value="@Model.customer_id" id="hdnCustomerID" />
    <input type="hidden" value="@Model.product_code" id="hdnProductCode" />
    <input type="hidden" value="@Model.shade_code" id="hdnShadeCode" />

    <div class="form-group">
        <p class="form-label">&nbsp;Customer Name</p>

        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Customer.name, new { @class = "text-input", id = "Customer", @readonly = "readonly", disabled = "disabled"})
        </div>
    </div>
    <div class="form-group">
        <p class="form-label">&nbsp;Product Code</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.product_code, new { @class = "text-input", id = "ProductCode", @readonly = "readonly", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <p class="form-label">&nbsp;Shade Code</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.shade_code, new { @class = "text-input", id = "ShadeCode", @readonly = "readonly", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <p class="form-label">&nbsp; Unit Price</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.unit_price, new { @class = "text-input", id = "UnitPrice", @placeholder = "Enter UnitPrice(upto 4 decimal digit)", @maxlength = "7", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter UnitPrice(upto 4 decimal digit)'", @type = "number", @step = "any" })
