    <script language="javascript">

       // 
        ///set start date
        if(@stDtDay>=1 && @stDtDay<=9)
        {
            $('#StartDate').val("0" + @stDtDay);
        }
        else
        {
            $('#StartDate').val(@stDtDay);
        }
        if(@stDtMon >=1 && @stDtMon<=9)
        {
            $('#StartMonth').val("0"+@stDtMon);
        }
        else
        {
            $('#StartMonth').val(@stDtMon);
        }
        $('#StartYear').val(@stDtYear);

        ///set end date
        if(@EndDtDay>=1 && @EndDtDay<=9)
        {
            $('#EndDate').val("0" + @EndDtDay);
        }
        else
        {
            $('#EndDate').val(@EndDtDay);
        }
        if(@EndDtMon >=1 && @EndDtMon<=9)
        {
            $('#EndMonth').val("0"+@EndDtMon);
        }
        else
        {
            $('#EndMonth').val(@EndDtMon);
        }

        if(@EndDtYear=="2099")
        {
            $("#EndYear").append('<option value=@EndDtYear>@EndDtYear</option>')
            $("#EndYear option[value=@EndDtYear]").attr("selected","selected");
        }
        else
            $('#EndYear').val(@EndDtYear);




    </script>

