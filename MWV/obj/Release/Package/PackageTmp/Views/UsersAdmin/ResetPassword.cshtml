@model IdentitySample.Models.ResetPasswordViewModel
@{
    
}
<style>
    #tempbodySection li {
        list-style-type: none;
    }
</style>
<h2><b>Reset Password</b></h2>
&nbsp;@Html.ActionLink("Back to List", "Index")
@using (Html.BeginForm("ResetPassword", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "error-msg" })
    @Html.HiddenFor(model => model.id)
   
     
    
    
    <div class="form-group">
       <p class="form-label"> &nbsp;Name</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.name, new { @class = "text-input", @placeholder = "Enter Name", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Name'" })
            @Html.HiddenFor(model => model.name)
        </div>
    </div>
    <div class="form-group">
      <p class="form-label"> &nbsp;Email</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "text-input", @placeholder = "Enter Email", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Email'" })
            @Html.HiddenFor(model => model.Email)
        </div>
    </div>
    <div class="form-group">
        <p class="form-label"> &nbsp;Password</p>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "text-input", @placeholder = "Enter Password", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Password'" })
        </div>
    </div>
    <div class="form-group">
       <p class="form-label"> &nbsp;Confirm Password</p>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-input", @placeholder = "Enter Conformation Password", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Conformation Password'" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>
    <br />
}
<script>
    $("#name").attr("disabled", "disabled");
    $("#Email").attr("disabled", "disabled");

</script>