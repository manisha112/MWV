@model IdentitySample.Models.ChangePasswordViewModel
@{
    @*<style>
        #ChangePasswordinner li {
            list-style-type: none;
        }
</style>*@
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div id="ChangePasswordinner" class="change_password">
        <div class="fix-overflow">
            <a href="#close-panel" class="close-panel"><img src="images/close-panel.png"></a>
        </div>
        <h2>Change Password</h2>
        <div class="settings_inputs">
            <p class="form-label">Old Password</p>
            @*<input type="password" class="text-input">*@
            @Html.PasswordFor(m => m.OldPassword, new { @class = "text-input", @placeholder = "Enter Old Password", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Old Password'", @type = "Password" })

            <p class="form-label">New Password</p>

            @*<input type="password" class="text-input">*@
            @Html.PasswordFor(m => m.NewPassword, new { @class = "text-input", @placeholder = "Enter New Password", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter New Password'", @type = "Password" })

            <p class="form-label">Confirm New Password</p>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-input", @placeholder = "Enter Confirmation Password", @onfocus = "this.placeholder = ''", @onblur = "this.placeholder = 'Enter Confirmation Password'", @type = "Password" })

            @*<input type="password" class="text-input">*@
        </div>
        @*<span id="ChangePassErrors" class="error-msg">@ViewBag.IncorrectPass</span>*@
        @Html.ValidationSummary("", new { @class = "error-msg" })
       <div id="invalidErrors">
        <ul>
            <li class="error-msg">@ViewBag.IncorrectPass</li>
        </ul>
     </div>
        <a href="#changePassword" class="btn">Change Password</a>
        @*<input type="submit" value="Change password" class="btn btn-default" />*@
    </div>


}

<div id="changePasswordSuccess" class="change_password hidden">
    <div class="fix-overflow">
        <a href="#ClosePasswordSucess" class="close-panel"><img src="images/close-panel.png"></a>
    </div>
    <h2>CONFIRMATION</h2>
    <p class="details">Your password has been changed successfully. Please use your new password to log in next time.</p>
    <a href="#PasswordSucess" class="btn">Done</a>
</div>